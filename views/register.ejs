  <h1 class="text-center"> REGISTER PAGE </h1>
        <br>
    <div class= "container">
        <div class= "row">
            <div class="col-sm-3">      
          </div>
            
            <div class="col-sm-6">    
                <form action="/" method="POST">
                    <div class="form-group">
                        <label class="flabel">Name</label>
                        <input type="text" name="user[name]" class="form-control" id="rname" placeholder="Enter Name">
                      </div>
                    <div class="form-group">
                      <label class="flabel">Email address</label>
                      <input type="email" class="form-control" name="user[email]" id="rmail" aria-describedby="emailHelp" placeholder="Enter Email">
                    </div>
                    <div class="form-group">
                      <label class="flabel">Password</label>
                      <input type="password" name="user[password]" class="form-control" id="rpass" placeholder="Enter Password">
                    </div>
                    <div class="form-group">
                        <label class="flabel">Phone No.</label>
                        <input type="number" name="user[phoneno]" class="form-control" id="rphone" placeholder="Enter Phone No.">
                      </div>
                      <button id="regis" class="btn btn-primary">Register</button> 

                  </form>
                    </div>
            <div class="col-sm-3">        </div>
        </div>
    </div>
